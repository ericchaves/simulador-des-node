{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDirs": ["src" , "modelos"],
    "lib": ["ESNext"],
    "noEmit": false,
    "outDir": "dist",
    "moduleResolution": "node",
    "allowJs": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "types": ["node", "jest", "ts-node"],
  "include": ["src/**/*.ts", "modelos/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
